.question
  flex: 0 1 100%
  display: flex
  align-items: center
  height: 100%
  height: 61px
  max-height: 61px
  padding: 10px 15px
  background-color: #000
  color: #fff
  font-size: 20px

  &-list
    display: flex
    flex-wrap: wrap
    margin: 20px
  
  &-wrapper
    display: flex
    flex-direction: column
    width: calc(50% - 7.5px)
    &:nth-child(odd)
      margin-right: 15px
    &.correct
      opacity: .75
      pointer-events: none

.answer-list
  flex: 0 1 100%
  padding-left: 2rem
  
  .answer
    list-style-type: lower-alpha
    width: 80%
    padding: 10px 15px
    border: 1px solid #fff
    margin-bottom: 10px
    &:hover
      cursor: pointer
      border-color: #000
    &.correct
      background-color: rgba(135,211,124,.5)
    &.wrong
      background-color: rgba(236,100,75,.5)
